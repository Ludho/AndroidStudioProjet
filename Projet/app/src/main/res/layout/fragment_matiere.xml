<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Choisis une matiÃ¨re"
            android:id="@+id/Choose_your_school_subject"
            android:textSize="30dp"
            android:gravity="center_horizontal">
        </TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/maths"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Choose_your_school_subject">
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/school_subject_maths"
                android:textAlignment="textEnd"
                android:paddingRight="20dp"
                android:paddingVertical="50dp"
                android:layout_marginHorizontal="50dp"
                android:textSize="30dp"
                android:text="Maths"
                android:gravity="end" />
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="10dp"
                android:translationZ="10dp"
                android:layout_alignLeft="@+id/school_subject_maths"
                android:layout_centerInParent="true"
                android:src="@drawable/maths">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/francais"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maths"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/school_subject_divers"
                android:textAlignment="textEnd"
                android:paddingVertical="50dp"
                android:paddingRight="20dp"
                android:layout_marginHorizontal="50dp"
                android:textSize="30dp"
                android:text="Divers"
                android:gravity="end" />
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="10dp"
                android:translationZ="10dp"
                android:layout_alignLeft="@+id/school_subject_divers"
                android:layout_centerInParent="true"
                android:src="@drawable/francais">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/culture"
            android:layout_below="@+id/francais">
            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textAlignment="textEnd"
                android:paddingRight="20dp"
                android:paddingVertical="50dp"
                android:layout_marginHorizontal="50dp"
                android:lines="2"
                android:id="@+id/school_subject_G_knowledges"
                android:textSize="25dp"
                android:text="Culture"
                android:gravity="end" />
            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="10dp"
                android:translationZ="10dp"

                android:layout_alignLeft="@+id/school_subject_G_knowledges"
                android:layout_centerInParent="true"
                android:src="@drawable/culture">
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>