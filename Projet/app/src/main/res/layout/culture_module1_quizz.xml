<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/gray"
    tools:context="com.example.projet.Culture_Activities.module1.culture_module1_quizz">

    <TextView
        android:id="@+id/culture_module1_question_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question: 1/10"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/culture_module1_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="Score: 0"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="10dp" />


        <TextView
            android:id="@+id/culture_module1_timer"
            android:layout_width="194dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingEnd="10dp"
            android:text="00:30"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:gravity="end" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/culture_module1_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:padding="25dp"
            android:text="Poser une question ici"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <RadioGroup
            android:id="@+id/culture_module1_choix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/culture_module1_reponse1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:button="@null"
                android:layout_marginTop="5dp"
                android:freezesText="true"
                android:text="réponse1"
                android:paddingHorizontal="10dp"
                android:background="@drawable/default_option_a"
                android:textSize="22sp"
                android:textColor="#000"
                android:paddingStart="90dp"
                android:paddingLeft="90dp" />

            <RadioButton
                android:id="@+id/culture_module1_reponse2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:button="@null"
                android:layout_marginTop="5dp"
                android:freezesText="true"
                android:paddingHorizontal="10dp"
                android:text="réponse 2"
                android:background="@drawable/default_option_b"
                android:textSize="22sp"
                android:textColor="#000"
                android:paddingStart="90dp"
                android:paddingLeft="90dp" />

            <RadioButton
                android:id="@+id/culture_module1_reponse3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/default_option_c"
                android:button="@null"
                android:freezesText="true"
                android:text="réponse 3"
                android:textSize="22sp"
                android:textColor="#000"
                android:paddingStart="90dp"
                android:paddingLeft="90dp" />

            <RadioButton
                android:id="@+id/culture_module1_reponse4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/default_option_d"
                android:button="@null"
                android:freezesText="true"
                android:text="réponse 4"
                android:paddingStart="90dp"
                android:textColor="#000"
                android:textSize="22sp"
                android:paddingLeft="90dp" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="15dp"
            android:id="@+id/butonvalider"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/culture_module1_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/submit_bt_background"
                android:text="Suivant"
                android:textAllCaps="false"
                android:onClick="BouttonSuivant"
                android:textSize="22sp"
                android:padding="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>