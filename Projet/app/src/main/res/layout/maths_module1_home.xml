<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="Maths_Activities.module1.maths_module1_home">
    <Button
        android:id="@+id/maths_module2_autre_exercice"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:textColor="@color/lightblack"
        android:text="CHOISIR UN AUTRE EXERCICE"
        android:onClick="maths_module1_others_exercices"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Choisis une table"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/maths_module1_choix_table"
            android:layout_width="wrap_content"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_height="wrap_content"
            android:scaleX="1.5"
            android:scaleY="1.5"></NumberPicker>

        <Button
            android:id="@+id/maths_module1_valider_choix"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightblack"
            android:layout_marginTop="20dp"
            android:onClick="maths_module1_valider_table"
            android:paddingVertical="10dp"
            android:text="Commencer !!"
            android:textSize="30sp" />
    </LinearLayout>


</RelativeLayout>