<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projet.Maths_Activities.module2.maths_module2_end"
    android:orientation="vertical"
    android:background="@color/gray"
    android:padding="15dp">
    <Button
        android:id="@+id/maths_module2_autre_exercice"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/lightblack"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_alignParentTop="true"
        android:text="CHOISIR UN AUTRE EXERCICE"
        android:onClick="maths_module2_others_exercices"/>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:id="@+id/maths_module2_winner_vue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="FELICITATION!!"
            android:textSize="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/maths_module2_nb_error_timer"
            android:gravity="center"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/maths_module2_rejouer"
            android:layout_height="80dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:textSize="20dp"
            android:textColor="@color/lightblack"
            android:text="Rejouer"
            android:onClick="maths_module2_replay"/>
    </LinearLayout>
</RelativeLayout>