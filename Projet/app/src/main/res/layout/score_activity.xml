<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_User"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:padding="15dp"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">
    <ImageView
        android:layout_width="50dp"
        android:id="@+id/score_return"
        android:layout_height="50dp"
        android:src="@drawable/retour1"
        android:onClick="returnButton"
        android:layout_alignParentRight="true">
    </ImageView>
    <Spinner
        android:layout_marginVertical="20dp"
        android:layout_below="@+id/score_return"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/score_spinner"
        ></Spinner>

    <LinearLayout
        android:paddingTop="20dp"
        android:visibility="gone"
        android:id="@+id/score_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_spinner"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/score_maths_1_profile"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Table de multiplication maîtrisé :"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center_horizontal">
        </TextView>
        <RelativeLayout
            android:layout_margin="20dp"
            android:id="@+id/add_trophy"

            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/table1"
                android:layout_width="80dp"
                android:visibility="gone"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/silver_trophy">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:text="1">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="80dp"
                android:visibility="gone"
                android:id="@+id/table2"
                android:layout_alignWithParentIfMissing="true"
                android:layout_below="@id/table1"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/silver_trophy">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:text="2">
                </TextView>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/table3"
                android:visibility="gone"
                android:layout_below="@id/table2"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/silver_trophy">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:text="3">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="80dp"
                android:id="@+id/table4"
                android:visibility="gone"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/silver_trophy">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:text="4">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/table5"
                android:visibility="gone"
                android:layout_below="@+id/table4"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerInParent="true"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/silver_trophy">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:text="5">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="80dp"
                android:visibility="gone"
                android:layout_alignWithParentIfMissing="true"
                android:id="@+id/table6"
                android:layout_below="@+id/table5"
                android:layout_centerInParent="true"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/silver_trophy">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:text="6">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="80dp"
                android:id="@+id/table7"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/silver_trophy">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:text="7">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/table8"
                android:layout_below="@+id/table7"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_alignWithParentIfMissing="true"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/silver_trophy">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:text="8">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="80dp"
                android:visibility="gone"
                android:id="@+id/table9"
                android:layout_below="@+id/table8"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentRight="true"
                android:layout_height="80dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/silver_trophy">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:text="9">
                </TextView>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>






    <LinearLayout
        android:visibility="gone"
        android:paddingTop="20dp"
        android:id="@+id/score_addition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_spinner"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/score_maths_2_profile"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Addition"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center_horizontal">
        </TextView>
        <TextView
            android:text="Addition fait en 1 minute : "
            android:textColor="@color/white"
            android:id="@+id/score_addition_addition"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Multiplication"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center_horizontal">
        </TextView>
        <TextView
            android:text="Multiplication fait en 1 minute : "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="facile : "
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/score_addition_facile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginHorizontal="30dp"
            android:text="normale : "
            android:id="@+id/score_addition_normale"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginHorizontal="30dp"
            android:id="@+id/score_addition_difficile"
            android:text="difficile : "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>




    <LinearLayout
        android:visibility="gone"
        android:paddingTop="20dp"
        android:id="@+id/score_quiz_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_spinner"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Quizz"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center_horizontal">
        </TextView>
        <TextView
            android:text="Scores reçu pour les quiz : "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="histoire : "
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/score_quiz_profile_histoire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginHorizontal="30dp"
            android:text="français : "
            android:textColor="@color/white"
            android:id="@+id/score_quiz_profile_francais"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginHorizontal="30dp"
            android:id="@+id/score_quiz_profile_geographie"
            android:text="géographie : "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    <LinearLayout

        android:paddingTop="20dp"
        android:id="@+id/score_memo_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_spinner"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Correspondance"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center_horizontal">
        </TextView>
        <TextView
            android:text="Plus haut score reçu pour le jeu mémo : "
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="facile : "
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/score_memo_profile_facil"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginHorizontal="30dp"
            android:text="normale : "
            android:textColor="@color/white"
            android:id="@+id/score_memo_profile_normal"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginHorizontal="30dp"
            android:id="@+id/score_memo_profile_difficil"
            android:text="difficile : "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>


</RelativeLayout>